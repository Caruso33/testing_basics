{
  "name": "testing",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@testing-library/react": "^9.4.0",
    "babel-jest": "^24.9.0",
    "faker": "^4.1.0",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.4"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "open:coverage": "open coverage/lcov-report/index.html"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFiles": [
      "<rootDir>/jest/globals.js"
    ],
    "collectCoverageFrom": [
      "*.js"
    ],
    "coverageThreshold": {
      "global": {
        "statemets": 50,
        "branches": 50,
        "functions": 50,
        "lines": 100
      }
    }
  },
  "dependencies": {
    "polished": "^3.4.2",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1"
  }
}
